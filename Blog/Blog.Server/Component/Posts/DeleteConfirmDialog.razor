<MudDialog>
    <DialogContent>
        @*<MudText>@ContentText</MudText>*@
        <MudText Style="@($"text-center;")">Are you sure you want to delete this comment? <br/> This comment will be deleted in 30 sec. </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Default" FullWidth="true" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" FullWidth="true" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog
    {
        get;
        set;
    }
    [Parameter]
    public string ContentText
    {
        get;
        set;
    }
     
    [Parameter]
    public string ButtonText
    {
        get;
        set;
    }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }


    private void Cancel()
    {
        MudDialog.Cancel();
    }
}