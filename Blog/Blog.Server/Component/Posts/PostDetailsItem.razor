@using Blog.Common.Model.Dto
@using Blog.Common.Model.ViewModel

<MudCard>
    <MudCardContent Style="@($"background-color:#708090;")">
        <MudText Typo="Typo.h6" Align="Align.Center" Style="@($"color:#E5E4E2;font-size:2.0rem;text-align: center;")">@PostModel.PostTitle</MudText>
    </MudCardContent>
    <MudCardContent>
        <MudText Typo="Typo.body2" Align="Align.Start" Style="@($"color:#6082B6;")">@PostModel.UserName</MudText>
        <MudText Typo="Typo.body2" Align="Align.Start">@PostModel.DateCreated</MudText>
        <MudText Typo="Typo.body2" Align="Align.Start">@PostModel.PostDetails</MudText>
        <i>Please, leave your comment.</i>
    </MudCardContent>
    <hr />
    <div class="text-start col-sm-12">
        @foreach (var tag in PostModel.TagsList)
        {
            <MudButton Variant="Variant.Text" Color="Color.Info" href="@tag">@tag</MudButton>
        }
    </div>
</MudCard>

@code {
    [Parameter]
    public PostModel PostModel { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine($"PostItem Initialized - PostID: {PostModel.PostID}");
        base.OnInitialized();
    }
}