@using Blog.Common.Model.Dto
@using Blog.Common.Model.ViewModel

<MudCard Style="@($"background-color:white;border-rounded")">
    <MudCardContent>
        <MudText Typo="Typo.body2" Align="Align.Start" Style="@($"color:#6082B6;padding-top:0px;padding-bottom:0px;")">@CommentModel.UserName</MudText>
        <MudText Typo="Typo.body2" Align="Align.Start" Style="@($"color:#71797E;padding-top:0px;padding-bottom:10px;")">@CommentModel.DateCreated</MudText>
        <MudText Typo="Typo.body2" Align="Align.Start" Style="@($"color:#6082B6;")">@CommentModel.CommentTitle</MudText>
        <MudText Typo="Typo.body2" Align="Align.Start">@CommentModel.CommentDetails</MudText>
    </MudCardContent>
    <hr />
</MudCard>

@code {
    [Parameter]
    public CommentModel CommentModel { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine($"CommentItem Initialized - CommentID: {CommentModel.CommentID}");
        base.OnInitialized();
    }
}

